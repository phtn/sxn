{
  "manifest_version": 3,
  "name": "Watchful Wind",
  "version": "1.5",
  "description": "Watch game results and calculate averages",

  "permissions": ["storage", "activeTab", "sidePanel"],

  "content_scripts": [
    {
      "matches": ["*://*.bet88.ph/*", "*://*.ap.blink.run/api/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "action": {
    "default_title": "Watchful Wind",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["injected.js", "content.js", "background.js", "index.html"],
      "matches": ["*://*/*"]
    }
  ]
}
